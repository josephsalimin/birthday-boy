{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*" : ["src/*"]
    },
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES6",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}